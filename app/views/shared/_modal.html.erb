<!-- app/views/shared/_modal.html.erb -->
<turbo-frame id="modal">
  <div class="modal fade show d-block" tabindex="-1" style="background: rgba(0,0,0,0.5);" data-controller="modal" data-action="click->modal#close">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-body position-relative">
          <%= yield %>
          <button type="button" class="btn-close position-absolute top-0 end-0 m-3" data-action="click->modal#close" aria-label="Close"></button>
        </div>
      </div>
    </div>
  </div>
</turbo-frame>

