<h1>Dashboard</h1>
<br>
<div>
  <% if @car_listings.any?  %>
    <h3>My Current Listings</h3>
    <ul>
      <% @car_listings.each do |car| %>
        <li>
          <%= link_to car.title, classifieds_car_path(car) %>
          - <%= number_to_currency(car.price) %>
          (<%= link_to "Edit", edit_classifieds_car_path(car) %>)
        </li>
      <% end %>
    </ul>
    <p><%= link_to "Create New Listing", new_classifieds_car_path, class: "btn btn-primary" %></p>
    <% else %>
      <p>You have not listed any vehicles. List one <%= link_to "now!", new_classifieds_car_path %></p>
  <% end %>
</div>
<br>
<p><%= link_to "All Listings", classifieds_car_path %></p>