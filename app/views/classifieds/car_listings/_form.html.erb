<%= form_with(model: @car_listing, data: { turbo_frame: "_top" }, html: { class: "needs-validation", novalidate: true }) do |f| %>
  <% if @car_listing.errors.any? %>
    <div class="alert alert-danger">
      <h4>There were some errors:</h4>
      <ul>
        <% @car_listing.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :title, class: "form-label" %>
    <%= f.text_field :title, class: "form-control", autofocus: true %>
  </div>

  <div class="mb-3">
    <%= f.label :make, class: "form-label" %>
    <%= f.text_field :make, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :model, class: "form-label" %>
    <%= f.text_field :model, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :year, class: "form-label" %>
    <%= f.number_field :year, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :mileage, class: "form-label" %>
    <%= f.number_field :mileage, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= f.label :price, class: "form-label" %>
    <%= f.number_field :price, class: "form-control", step: 0.01 %>
  </div>

  <div class="mb-3">
    <%= f.label :description, class: "form-label" %>
    <%= f.text_area :description, class: "form-control", rows: 4 %>
  </div>

  <div class="mb-3">
    <%= f.label :images, "Photos", class: "form-label" %>
    <%= f.file_field :images, multiple: true, class: "form-control" %>
  </div>

  <div class="d-grid gap-2 d-md-block">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", "#", class: "btn btn-outline-secondary", data: { action: "click->modal#close" } %>
  </div>
<% end %>
